<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cmn="clr-namespace:EditFormValidationWpf.Common">
    <Style TargetType="{x:Type cmn:ValidationControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type cmn:ValidationControl}">
                    <StackPanel>
                        <ContentPresenter ContentSource="Child" />
                        <TextBlock Text="Some Error!"
                                   Foreground="{StaticResource errorBrush}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>