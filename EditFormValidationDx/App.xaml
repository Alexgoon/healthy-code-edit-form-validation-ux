<Application x:Class="EditFormValidationDx.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="accentButton"
               TargetType="dx:SimpleButton">
            <Setter Property="Background"
                    Value="#FF005FBA" />
            <Setter Property="Foreground"
                    Value="#FFFFFFFF" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#E6005FB8" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="infoRibbonButton"
               TargetType="dxb:BarButtonItem">
            <Setter Property="Glyph"
                    Value="{dx:DXImage 'SvgImages/Icon Builder/Actions_Info.svg'}" />
            <Setter Property="MediumGlyph"
                    Value="{dx:DXImage 'SvgImages/Icon Builder/Actions_Info.svg'}" />
            <Setter Property="LargeGlyph"
                    Value="{dx:DXImage 'SvgImages/Icon Builder/Actions_Info.svg'}" />
            <Setter Property="Content"
                    Value="Info" />
        </Style>
        <Style x:Key="roundPanelBorder"
               TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="6" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Background"
                    Value="#FFFFFFFF" />
            <Setter Property="BorderBrush"
                    Value="#FFE1E1E1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="LightGray"
                                      BlurRadius="6"
                                      ShadowDepth="2"
                                      Opacity="0.15" />
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
